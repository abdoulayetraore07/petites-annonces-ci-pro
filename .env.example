# ==============================================
# PETITES ANNONCES CI - VARIABLES D'ENVIRONNEMENT
# ==============================================

# Environment
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://admin:dev_password_change_in_prod@localhost:5432/petites_annonces_ci
REDIS_URL=redis://:dev_redis_password@localhost:6379

# ==============================================
# JWT & SECURITY
# ==============================================
JWT_SECRET=super_secret_jwt_key_change_in_prod_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=refresh_secret_key_change_in_prod
BCRYPT_ROUNDS=12

# ==============================================
# CLOUDINARY (Images)
# ==============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=petites-annonces-ci

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Petites Annonces CI <noreply@petites-annonces-ci.com>"

# ==============================================
# SMS CONFIGURATION (Côte d'Ivoire)
# ==============================================
SMS_PROVIDER=orange_ci
ORANGE_CI_CLIENT_ID=your_orange_client_id
ORANGE_CI_CLIENT_SECRET=your_orange_client_secret
SMS_SENDER_NAME=PetitesAnnonceCI

# ==============================================
# PAIEMENTS MOBILES
# ==============================================
# Orange Money
ORANGE_MONEY_MERCHANT_KEY=your_orange_money_key
ORANGE_MONEY_MERCHANT_PIN=your_pin

# Wave API
WAVE_API_KEY=your_wave_api_key
WAVE_SECRET_KEY=your_wave_secret

# Stripe (International)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================
# FRONTEND URLs
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# ==============================================
# ANALYTICS & MONITORING
# ==============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your_vercel_id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ==============================================
# SOCIAL AUTH (Optionnel)
# ==============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ==============================================
# WHATSAPP BUSINESS API (Optionnel)
# ==============================================
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# ==============================================
# GÉOLOCALISATION
# ==============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,https://petites-annonces-ci.com

# ==============================================
# FILE UPLOAD LIMITS
# ==============================================
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=10

# ==============================================
# SESSION CONFIGURATION
# ==============================================
SESSION_SECRET=session_secret_change_in_production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ==============================================
# BACKUP & MAINTENANCE
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
MAINTENANCE_MODE=false

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
DEBUG_MODE=true
MOCK_PAYMENTS=true
MOCK_SMS=true